<h1>Settings</h1>
<% form_for(@user, :url => { :action => "update", :id => @user.id }) do |f| %>
	<div id="content">
		<div class="clearfix">
			<div class="article">
				<div class="xbar clearfix">
					<div>
				<!--		<a href="settings/privacy">others</a> -->
						<span class="now">
							<span>Profile</span>
						</span>
						<%= link_to 'Topics', my_topics_path %>
					</div>
				</div>
				<table cellpadding="5" align="center" style="clear: both;">
					<tbody>
						<tr>
							<td class="m" valign="top" align="right" style="padding: 5px;">Name: </td>
							<td valign="top" style="padding: 5px;">
								<%= f.text_field :name , :length => 15, :maxlength => 15 %>
								<br />
								max length: 15 characters
								<rb />
							</td>
						</tr>
						<tr>
							<td class="m" valign="top" align="right" style="padding: 5px;">Signature: </td>
							<td valign="top" style="padding: 5px;">
								<%= f.text_field :signature , :length => 30, :maxlength => 30 %>
								<br />
								max length: 30 characters
								<rb />
							</td>
						</tr>
						<tr>
							<td class="m" valign="top" align="right" style="padding: 5px;">Image: </td>
							<td valign="top" style="padding: 5px;">
								<% if @user.image_id %>
								<div style="margin: 10px; float: left;">
								<%= image_tag @image.public_filename %>
								</div>
								<div style="margin: 10px; float: left;">
								<%= image_tag @image.public_filename(:thumb) %>
								</div>
								<% else %>
								<div style="margin: 10px; float: left;">
								<%= image_tag 'default_user.png' %>
								</div>
								<% end %>
								<div style="margin: 10px; float: left;">
									<%= link_to 'Change', new_image_path %>
								</div>
							</td>
						</tr>
						<tr>
							<td class="m" valign="top" align="right" style="padding: 5px;">Email: </td>
							<td valign="top" style="padding: 5px;">
								<%= f.text_field :email , :length => 30, :maxlength => 30 %>
								<br />
								max length: 15 characters
								<rb />
							</td>
						</tr>
						<tr>
							<td class="m" valign="top" align="right" style="padding: 5px;">Password: </td>
							<td valign="top" style="padding: 5px;">
								<%= link_to 'Change', password_path %>
							</td>
						</tr>
						<tr>
							<td style="padding: 5px;"></td>
							<td style="padding: 5px;">
								<%= f.submit "Update" %>
							</td>
						</tr>
					</tbody>
				</table>
			</div>

			<div id="aside">
				<p class="pl2">&gt;some title</p>
				<br />
			
			</div>
			<div id="extra">
	
			</div>
		</div>
	</div>
<% end %>
