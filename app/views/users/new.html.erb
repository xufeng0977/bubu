<% @user.password = @user.password_confirmation = nil %>
<div id="content">
	<h1>Sign up as a new user</h1>
	<%= error_messages_for :user %>
	<% form_for :user, :url => users_path, :html => {:multipart => true} do |f| -%>
		<div class="clearfix">
			<div class="article">
				<div style="padding-left: 50px">
					<span class="m">Login</span>
					<br />
					<%= f.text_field :login %>
					<br />
					<span class="pl">You login id</span>
					<br />
					<br />
					<span class="m">Email</span>
					<br />
					<%= f.text_field :email %>
					<br />
					<span class="pl">You email</span>
					<br />
					<br />
					<span class="m">Password</span>
					<br />
					<%= f.text_field :password %>
					<br />
					<span class="pl">Your password</span>
					<br />
					<br />
					<span class="m">Confirm password</span>
					<br />
					<%= f.text_field :password_confirmation %>
					<br />
					<span class="pl">Confirm your password</span>
					<br />
					<br />
					<span class="m">Image</span>
					<br />
					<%= file_column_field 'user', 'image' %>
					<br />
					<span class="pl">You image</span>
					<br />
					<br />
					<%= submit_tag 'Sign up' %>
				</div>
			</div>

			<div id="aside">
				<p class="pl2">&gt;<%= link_to "Have already signed up, please login", login_path %></p>
				<br />

			</div>
			<div id="extra">
	
			</div>
		</div>
	<% end -%>
</div>

