<h1>New topic</h1>
<p style="color: red"><%= flash[:error] %></p>
<% form_for(@topic) do |f| %>
  <%= f.error_messages %>
  <Label for "topic_title">Title:</Label>
  <%= f.text_field :title %> <br />
  <%= f.label :tag_list %>
  <%= f.text_field :tag_list, :size => 80 %>
	<%= show_simple_captcha %> 
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', topics_path %>
