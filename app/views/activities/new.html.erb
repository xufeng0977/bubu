  <%= f.error_messages %>

  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :record_type %><br />
    <%= f.text_field :record_type %>
  </p>
  <p>
    <%= f.label :record_id %><br />
